{
    "version": "2.0.0",
    "tasks": [
        //
        // dotnet: watch and build
        //
        {
            "label": "dotnet: watch",
            "detail": "with .NET Hot Reload",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "isBackground": true,
            "args": [
                "watch",
                "run",
                "--",
                "-w",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Sinedo/",
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^watch :",
                    "endsPattern": "."
                }
            }
        },
        {
            "label": "dotnet: build",
            "command": "dotnet",
            "type": "process",
            "problemMatcher": "$msCompile",
            "group": "build",
            "args": [
                "build",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Sinedo/"
            },
            "dependsOn": "tsc: build"
        },
        //
        // typescript: watch and build
        //
        {
            "label": "tsc: watch",
            "type": "typescript",
            "tsconfig": "src/Sinedo/wwwroot/app/tsconfig.json",
            "option": "watch",
            "group": "build",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "tsc: build",
            "type": "typescript",
            "tsconfig": "src/Sinedo/wwwroot/app/tsconfig.json",
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        //
        // dotnet: publish as deb or rpm package for x64 / arm64.
        //
        {
            "label": "dotnet: publish deb (linux-x64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Sinedo/Sinedo.csproj",
                "/t:CreateDeb",
                "/p:PublishSingleFile=true",
                "/p:PublishTrimmed=true",
                "/p:DebugType=None",
                "/p:RuntimeIdentifier=linux-x64",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet: publish rpm (linux-x64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Sinedo/Sinedo.csproj",
                "/t:CreateRpm",
                "/p:PublishSingleFile=true",
                "/p:PublishTrimmed=true",
                "/p:DebugType=None",
                "/p:RuntimeIdentifier=linux-x64",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet: publish deb (linux-arm64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Sinedo/Sinedo.csproj",
                "/t:CreateDeb",
                "/p:PublishSingleFile=true",
                "/p:PublishTrimmed=true",
                "/p:DebugType=None",
                "/p:RuntimeIdentifier=linux-arm64",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet: publish deb (linux-arm64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Sinedo/Sinedo.csproj",
                "/t:CreateDeb",
                "/p:PublishSingleFile=true",
                "/p:PublishTrimmed=true",
                "/p:DebugType=None",
                "/p:RuntimeIdentifier=linux-arm64",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet: publish rpm (linux-arm64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Sinedo/Sinedo.csproj",
                "/t:CreateRpm",
                "/p:PublishSingleFile=true",
                "/p:PublishTrimmed=true",
                "/p:DebugType=None",
                "/p:RuntimeIdentifier=linux-arm64",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}