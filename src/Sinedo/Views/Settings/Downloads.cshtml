@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "Layout_Settings";
    ViewData["Title"] = Localizer["Title"];
    ViewData["SelectedTab"] = 0;
}

<template id="localized_dialog_strings">
    <p id="setup_message">@Localizer["SetupMessage"]</p>
    <p id="login_message">@Localizer["LoginMessage"]</p>
    <p id="error_message">@Localizer["ErrorMessage"]</p>
</template>

<div class="content__separator">
    <p>@Localizer["SetupDescription"]</p>
    <div class="textbox__wrapper">
        <div class="textbox">
            <input
                id="input_bandwidth"
                data-setting-name="internetConnectionInMbits"
                list="bandwidth_list"
                type="number"
                min="1" step="1"
                max="25000"
                pattern="\d*"
                inputmode="numeric"
                spellcheck="false"
                autocomplete="off"
                value="@Model.InternetConnectionInMbits"
                required />

            <label for="input_bandwidth">@Localizer["InternetConnection"]</label>
            <datalist id="bandwidth_list">
                <option label='@Localizer["Option16"]' value="16"></option>
                <option label='@Localizer["Option50"]' value="50"></option>
                <option label='@Localizer["Option100"]' value="100"></option>
                <option label='@Localizer["Option250"]' value="250"></option>
                <option label='@Localizer["Option1000"]' value="1000"></option>
                <option label='@Localizer["Option10000"]' value="10000"></option>
            </datalist>
        </div>

        <div class="textbox">
            <input
                id="input_concurrentDownloads"
                data-setting-name="concurrentDownloads"
                type="number"
                min="1" step="1"
                max="20"
                pattern="\d*"
                inputmode="numeric"
                spellcheck="false"
                autocomplete="off"
                value='@Model.ConcurrentDownloads''
                required />

            <label for="input_concurrentDownloads">@Localizer["ConcurrentDownloads"]</label>
        </div>
    </div>
</div>

<div class="content__separator">
    <p>@Localizer["DownloadDescription"]</p>
    <div class="textbox">
        <input
            id="input_downloadDirectory"
            data-setting-name="downloadDirectory"
            type="text"
            value="@Model.DownloadDirectory" required/>

        <label for="downloadDirectory_field">@Localizer["SavePath"]</label>
    </div>
</div>

<div class="content__separator">
    <p>@Localizer["ExtractDescription"]</p>
    <div class="textbox">
        <input
            id="input_extractingDirectory"
            data-setting-name="extractingDirectory"
            type="text"
            value="@Model.ExtractingDirectory" required/>
            
        <label for="extractingDirectory_field">@Localizer["ExtractFiles"]</label>
    </div>
</div>

<div class="content__separator">
    <div class="checkbox">
        <input
            id="input_isExtractingEnabled"
            data-setting-name="isExtractingEnabled"
            type="checkbox"
            value="checked" @(Model.IsExtractingEnabled ? "checked" : "")/>
            
        <label for="isExtractingEnabled_field">@Localizer["ArchiveCheckbox"]</label>
    </div>
</div>