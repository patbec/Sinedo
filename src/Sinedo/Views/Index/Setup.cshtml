@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "Content";
    ViewData["Title"] = Localizer["Title"];
}

<div style="height: 10vh;">

</div>
<h4 class="title">@Localizer["Title"]</h4>
<p>@Localizer["Description"]</p>


<form method="post">
    <div class="textbox__wrapper">  
        <div class="textbox">
            <input name="username" id="username_field" type="text" value="Sinedo" hidden/>
            @* <label for="username_field"></label> *@

            <input name="newPassword" id="password_field" type="password"/>
            <label for="password_field">@Localizer["Password"]</label>
        </div>

        <button type="submit" name="save" class="square-button" style="height: auto;">
            <div class="icon">save_alt</div>
            <div>@Localizer["Save"]</div>
        </button>
    </div>
    @if(Html.ViewData.ModelState.ContainsKey("policy"))
    {
        <p class="error">
            <span>@Localizer["SetupPolicy"]<span>
        </p>
    }
    else if(Html.ViewData.ModelState.ContainsKey("error"))
    {
        <p class="error">
            <span>@Localizer["SetupError"]</span>
        </p>
    }
</form>